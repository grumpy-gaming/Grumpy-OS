. /etc/profile

# Get Internal LED State
LED_STATE=$(get_setting "led.color")
if [ ! -n "${LED_STATE}" ]; then
  LED_STATE="battery"
  set_setting "led.color" "battery"
fi

# Run LED control at boot
/usr/bin/ledcontrol ${LED_STATE}
